    width-a4: 50ch;
    width-us: 52ch;
}
*/

centered {
    text-align: center;
}

character {
    width-a4: 38ch;
    width-us: 40ch;
    
    margin-left: 20ch;
}

parenthetical {
    width-a4: 32ch;
    width-us: 32ch;
    
    margin-left: 12ch;
}

more {
    width-a4: 38ch;
    width-us: 38ch;
    
    margin-left: 130px;
}

dualDialogueCharacter {
    width-a4: 38ch;
    width-us: 40ch;

    margin-left: 30ch;
}

dualDialogueParenthetical {
    width-a4: 28ch;
    width-us: 28ch;

    margin-left: 27ch;
}
dualDialogue {
    width-a4: 35ch;
    width-us: 35ch;

    margin-left: 21ch;
    margin-right: 0;
}

transition {
    text-align: right;
    uppercase: true;
}

lyrics {
    text-align: center;
    italic: true;
}

shot {
    uppercase: true;
    
    bold: userSetting(headingStyleBold);
}

titlePageUnknown {
    margin-left: 10ch;
}

pageBreak {
    text-align: center;
}

section {
    text-align: center;
    font: courier;
    underline: true;
    
    font-size: 12;
}
